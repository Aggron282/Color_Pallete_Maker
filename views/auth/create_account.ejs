    <link href = "/css/user/create_account.css" rel="stylesheet">

  </head>

 <body>
   <div class="glow-container">

   </div>
  <div class="container create_account_container">
      <div class="progress-bar">
          <div id="progress"></div>
      </div>

      <form id="accountForm">
          <div class="form-step active">
              <h2>Step 1: Basic Info</h2>
              <input type="text" id="firstName" placeholder="First Name" required>
              <input type="text" id="lastName" placeholder="Last Name" required>
              <button type="button" onclick="nextStep()">Next</button>
          </div>

          <div class="form-step">
              <h2>Step 2: Login Details</h2>
              <input type="text" id="username" placeholder="Username" required>
              <input type="password" id="password" placeholder="Password" required>
              <input type="password" id="confirmPassword" placeholder="Confirm Password" required>
              <button type="button" onclick="nextStep()">Next</button>
              <button type="button" class="back_btn" onclick="prevStep(1)">Back</button>

          </div>

          <div class="form-step">
              <h2>Step 3: Upload Profile Picture</h2>
              <input type="file" id="profilePic" class="profile_img_input" accept="image/*">
              <div class="image-preview profile_img_display_container" id="imagePreview">
                  <img id="profileImage" src="">
              </div>
              <button type="button" onclick="nextStep()">Next</button>
              <button type="button" class="back_btn"onclick="prevStep(2)">Back</button>

          </div>

          <div class="form-step">
              <h2>Step 4: Review & Submit</h2>
              <p id="reviewData"></p>
              <button type="submit">Create Account</button>
              <button type="button" class="back_btn"onclick="prevStep(3)">Back</button>
          </div>
      </form>
  </div>

  <script src = "https://cdnjs.cloudflare.com/ajax/libs/axios/1.7.7/axios.min.js"></script>
  <script src="/js/utils.js"></script>
  <script src="/js/img_upload.js"></script>
  <script src = "/js/auth/login.js"></script>
  <script src = "/js/canvas/ball_effect.js"></script>

  <script src = "/js/auth/create_account.js"></script>
  <script src = "/js/auth/auth.js"></script>

 </body>

</html>
